<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tmp.android_ble_heart_rate_monitor.MainActivity">

    <Button
        android:id="@+id/StartScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Scan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/StopScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Stop scanning"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/PeripheralTextView"
        android:layout_width="368dp"
        android:layout_height="160dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PeripheraLlistView"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/ConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Connect to device with index: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PeripheralTextView"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/DisconnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Disconnect from device"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PeripheralTextView"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/InputIndex"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/ConnectButton"
        app:layout_constraintTop_toBottomOf="@+id/PeripheralTextView"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/EnableNotificationButtton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Enable HRM notification "
        app:layout_constraintTop_toBottomOf="@+id/ConnectButton"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/HrmUnitTextView" />

    <Button
        android:id="@+id/DisableNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Disable HRM notification"
        app:layout_constraintTop_toBottomOf="@+id/DisconnectButton"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/HrmUnitTextView" />

    <ListView
        android:layout_width="367dp"
        android:layout_height="152dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/StartScanButton"
        android:id="@+id/PeripheraLlistView" />

    <TextView
        android:id="@+id/HrmValueTextView"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisconnectButton" />

    <TextView
        android:id="@+id/HrmUnitTextView"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="bpm"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/HrmValueTextView"
        app:layout_constraintTop_toBottomOf="@+id/DisconnectButton" />

</android.support.constraint.ConstraintLayout>
